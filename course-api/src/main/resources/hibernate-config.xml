<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/xtel.management</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <mapping class="com.xmedia.springstart.model.Employee.Employee"/>
        <mapping class="com.xmedia.springstart.model.Employee.EmployeeProject"/>
        <mapping class="com.xmedia.springstart.model.User.User"/>
        <mapping class="com.xmedia.springstart.model.Project.Project"/>
        <mapping class="com.xmedia.springstart.model.Role.Role"/>
        <mapping class="com.xmedia.springstart.model.Cv.Cv"/>
        <mapping class="com.xmedia.springstart.model.Customer.Customers"/>
        <mapping class="com.xmedia.springstart.model.CategorySkill.CategorySkill"/>
        <mapping class="com.xmedia.springstart.model.Skill.Skill"/>
        <mapping class="com.xmedia.springstart.model.Cv.CvInterview"/>
        <mapping class="com.xmedia.springstart.model.Position.Position"/>
        <mapping class="com.xmedia.springstart.model.Employee.EmployeeProcess"/>
        <mapping class="com.xmedia.springstart.model.Employee.EmployeePosition"/>
        <mapping class="com.xmedia.springstart.model.Skill.SkillsEmployees"/>

        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>